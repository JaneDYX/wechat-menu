/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 60rpx;
}
.login-btn {
  width: 300rpx;
  height: 80rpx;
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  border-radius: 12rpx;
}
.tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 按钮组同前 */
.btn-group {
  width: 80%;
  max-width: 300rpx;
}
.btn {
  width: 100%;
  margin: 15rpx 0;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
  color: #ffffff;
}
.primary { background-color: #0052CC; }
.secondary { background-color: #4A90E2; }
.admin { background-color: #9BBDEF; }

