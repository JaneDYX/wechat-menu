/* pages/index/index.wxss */
/* 让 ScrollView 顶部也能滚动出空白，logo 导航下不被遮挡 */
.scrollarea {
  flex: 1;
  padding-top: 20rpx;
}

/* 容器保持居中，但不再撑满整个高度，交给 Scroll 处理 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background-color: #ffffff;
  padding-bottom: 100rpx; /* 底部留白，保证按钮可滚动 */
}

/* 新增：logo 外层，加大上边距 */
.logo-wrapper {
  margin-top: 120rpx;  /* 根据需要微调 */
  margin-bottom: 280rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}

/* 缩小 logo */
.logo {
  width: 320rpx;
  height: 320rpx;
}

/* 按钮组同前 */
.btn-group {
  width: 80%;
  max-width: 300rpx;
}
.btn {
  width: 100%;
  margin: 15rpx 0;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
  color: #ffffff;
}
.primary { background-color: #0052CC; }
.secondary { background-color: #4A90E2; }
.admin { background-color: #9BBDEF; }

