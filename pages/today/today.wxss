/* pages/today/today.wxss */
.today-container { 
  background: #f9f9f9; 
  border-radius: 15rpx;
}

.meal-section {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}
.meal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.meal-area {
  display: block;
}

/* 卡片主体 */
.today-item {
  display: flex;
  width: 95%;
  background: #fff;
  border-radius: 25rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
}
.today-item-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  object-fit: cover;
}
.today-item-info {
  flex: 1;
  margin-left: 20rpx;
}
.today-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.today-item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.today-item-price {
  font-size: 28rpx;
  color: #e91e63;
}
.today-item-summary {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #666;
}
.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #888;
  font-size: 28rpx;
}
.total-bar {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}
.total-label {
  font-size: 30rpx;
  color: #333;
  margin-right: 10rpx;
}
.total-value {
  font-size: 32rpx;
  color: #e91e63;
  font-weight: bold;
}
