/* pages/detail/detail.wxss */
.detail-page {
  padding: 20rpx;
}

/* 大图 */
.image-section {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}
.detail-image {
  width: 100%;
  height: 100%;
}

/* 信息区 */
.info-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 每行 */
.row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.label {
  width: 100rpx;
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
}
.value {
  flex: 1;
  color: #666;
  font-size: 28rpx;
}

/* 分类列表 */
.category-list {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}
.category-item {
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #555;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 原材料标题 */
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  color: #333;
}

/* 原材料表头 */
.ingredients-header,
.ingredient-row {
  display: flex;
  align-items: center;
}
.ingredients-header {
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
}
.col {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}
/* 表头文字加粗 */
.ingredients-header .col {
  font-weight: bold;
  color: #333;
}
.ingredient-row {
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
