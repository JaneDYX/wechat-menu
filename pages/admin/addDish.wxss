.add-dish-page {
  padding: 20rpx;
  width: 90%;
  margin: auto;
}

.image-upload-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}
.preview-image {
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}

.form-row {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.form-label {
  width: 150rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.form-input {
  flex: 1;
  padding: 16rpx;
  border-bottom: 1px solid #ccc;
  font-size: 28rpx;
}

.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  padding-left: 150rpx;
}
.checkbox-item {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.checkbox-label {
  margin-left: 8rpx;
  font-size: 28rpx;
}

.section {
  border-top: 1rpx solid #eee;
  padding-top: 16rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.cell {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
}
.input {
  flex: 1;
  padding: 8rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.op-icon {
  width: 48rpx;
  height: 48rpx;
  margin-left: 12rpx;
}

.cost-display {
  margin: 20rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #e64340;
}

.submit-section {
  margin-top: 40rpx;
}
.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #0777c1;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}
